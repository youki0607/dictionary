<div class="contents row">
  <div class="container">
    <h1>New Language</h1>
    <%= form_with(model: @index, local: true) do |form|%>
      <%= form.text_field :name, placeholder: "Add Language" %>
      <%= form.text_field :image, placeholder: "Picture" %>
      <%= form.text_area :explanation, placeholder: "Text", rows: "10" %>
      <%= form.submit "Add" %>
    <% end %>
  </div>
</div>